# .prettierrc

overrides:
- files: [".*.js","*.js"]
  options:
    semi: false
    singleQuote: true
    arrowParens: "always"
- files: "resources/themes/input-theme-name/assets/js/**/*.js"
  options:
    semi: false
    singleQuote: true
    arrowParens: "always"
- files: "resources/themes/input-theme-name/assets/css/**/*.scss"
  options:
    parser: "scss"
